<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyDark"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#6AD3E6"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_set"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="設定" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c8627b"
            android:gravity="center"
            android:text="媽媽"
            android:textSize="36sp"
            android:textStyle="bold" />

    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <ScrollView
            android:id="@+id/chatScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            android:background="@color/colorWhite"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/chatLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

        </ScrollView>


        <!--        聊天內容-->

        <LinearLayout
            android:id="@+id/chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#AAFFEE"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/mic"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_margin="2.5dp">

                <ImageView
                    android:clickable="true"
                    android:id="@+id/backBtn"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/pre_page"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ac_text"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_edittext"
                android:orientation="horizontal"
                android:visibility="gone">


                <EditText
                    android:id="@+id/queryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:hint="請輸入文字..."
                    android:paddingHorizontal="15dp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/sendBtn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:gravity="center"
                android:src="@drawable/next" />





            <!--            選擇畫面-->
            <Button
                android:id="@+id/switch_btn_account"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:button="@drawable/abc_vector_test"
                android:src="@drawable/keyboard"
                android:text="我要記帳"
                android:textSize="25sp" />

            <Button
                android:id="@+id/switch_btn_chat"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:button="@drawable/abc_vector_test"
                android:src="@drawable/keyboard"
                android:text="我要聊天"
                android:textSize="25sp" />

        </LinearLayout>


        <!--        記帳(支出)-->
        <LinearLayout
            android:id="@+id/account_expense"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:background="#AAFFEE"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/closeBtn_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingTop="5dp"
                    app:srcCompat="@android:drawable/btn_dialog" />

                <Button
                    android:id="@+id/button_expense_Expense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="支出" />

                <Button
                    android:id="@+id/button_income_Expense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="收入" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="現金NT$"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/editText_money_expense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choose_item_expense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/breakfast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            app:srcCompat="@drawable/breakfast" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="早餐" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lunch"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/lunch" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="午餐" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="71dp"
                            app:srcCompat="@drawable/dinner" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="晚餐" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="備註"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/editText_note_expense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName" />

                    <Button
                        android:id="@+id/button_enter_expense"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="送出" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>





        <!--        記帳(收入)-->
        <LinearLayout
