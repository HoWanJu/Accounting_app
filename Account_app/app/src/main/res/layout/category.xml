<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button7"
        android:layout_width="152dp"
        android:layout_height="55dp"
        android:background="@drawable/button_rounde"
        android:text="支出"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <Button
        android:id="@+id/button6"
        android:layout_width="152dp"
        android:layout_height="55dp"
        android:background="@drawable/button_rounde_blue"
        android:text="收入"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <ScrollView
        android:id="@+id/contencrollView"
        android:layout_width="411dp"
        android:layout_height="429dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.546">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp">


                    <ImageView
                        android:id="@+id/breakfast"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/breakfast_icon" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/breakfast"
                        android:text="早餐"
                        android:textColor="#000000"
                        android:textSize="35sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/lunch"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/lunch_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/lunch"
                        android:text="午餐"
                        android:textColor="#000000"
                        android:textSize="35sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/dinner"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/dinner_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/dinner"
                        android:text="晚餐"
                        android:textColor="#000000"
                        android:textSize="35sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/dessert"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/dessert_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/dessert"
                        android:text="點心"
                        android:textColor="#000000"
                        android:textSize="35sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/drug"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/drug_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/drug"
                        android:text="醫藥"
                        android:textColor="#000000"
                        android:textSize="35sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/drink"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/drink_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/drink"
                        android:text="飲料"
                        android:textColor="#000000"
                        android:textSize="35sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/entertainment"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/entertainment_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/entertainment"
                        android:text="娛樂"
                        android:textColor="#000000"
                        android:textSize="35sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/exercise"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/exercise_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/exercise"
                        android:text="運動"
                        android:textColor="#000000"
                        android:textSize="35sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/housing"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/housing_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/housing"
                        android:text="居家"
                        android:textColor="#000000"
                        android:textSize="35sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/phone"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        android:padding="13dp"
                        app:srcCompat="@drawable/phone_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/phone"
                        android:text="電話費"
                        android:textColor="#000000"
                        android:textSize="35sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/rent"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/rent_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/rent"
                        android:text="房租/貸"
                        android:textColor="#000000"
                        android:textSize="35sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/salon"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/salon_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/salon"
                        android:text="美髮"
                        android:textColor="#000000"
                        android:textSize="35sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/shopping"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/shopping_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/shopping"
                        android:text="購物"
                        android:textColor="#000000"
                        android:textSize="35sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/study"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/study_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/study"
                        android:text="課業"
                        android:textColor="#000000"
                        android:textSize="35sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="79dp"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/tec_icon"
                        android:text="3C"
                        android:textColor="#000000"
                        android:textSize="35sp" />

                    <ImageView
                        android:id="@+id/tec_icon"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/tec_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/traffic"
                        android:layout_width="75dp"
                        android:layout_height="52dp"
                        app:srcCompat="@drawable/traffic_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/traffic"
                        android:text="交通"
                        android:textColor="#000000"
                        android:textSize="35sp" />

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/background"
        android:layout_width="411dp"
        android:layout_height="86dp"
        android:background="#AAFFEE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:text="類別管理"
        android:textSize="40sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageView
        android:id="@+id/pre_page"
        android:layout_width="47dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        app:srcCompat="@drawable/pre_page" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="407dp"
        android:layout_height="92dp"
        android:layout_marginTop="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp" >

                    <ImageView
                        android:id="@+id/tag_icon"
                        android:layout_width="65dp"
                        android:layout_height="42dp"
                        app:srcCompat="@drawable/tag_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/tag_icon"
                        android:text="博客來"
                        android:textColor="#000000"
                        android:textSize="35sp" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="55dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="320dp"
                        android:background="@drawable/trash_can_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp" >>
                    <ImageView
                        android:id="@+id/tag_icon_1"
                        android:layout_width="65dp"
                        android:layout_height="42dp"
                        app:srcCompat="@drawable/tag_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_toRightOf="@+id/tag_icon_1"
                        android:text="慶生"
                        android:textColor="#000000"
                        android:textSize="35sp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="55dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="320dp"
                        android:background="@drawable/trash_can_icon" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/button3"
        android:layout_width="46dp"
        android:layout_height="53dp"
        android:background="@android:drawable/ic_menu_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/contencrollView"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />


</androidx.constraintlayout.widget.ConstraintLayout>